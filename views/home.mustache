<!DOCTYPE html>
<html lang="en">
  <head>
    {{>head}}
  </head>

  <body>
    {{>nav}}
    
    <section class="home-slider js-fullheight owl-carousel bg-white">
      <div class="slider-item js-fullheight">
      	<div class="overlay"></div>
        <div class="container-fluid p-0">
          <div class="row d-md-flex no-gutters slider-text js-fullheight align-items-center justify-content-end" data-scrollax-parent="true">
          	<div class="one-third order-md-last img js-fullheight" style="background-image:url({{page.hero.bg_image}});">
          		<div class="overlay"></div>
          	</div>
	          <div class="one-forth d-flex js-fullheight align-items-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
	          	<div class="text mt-md-5">
		            <h1 class="mb-4">{{{page.hero.header}}}</h1>
		            <p>{{page.hero.subtext}}</p>
	            </div>
	          </div>
        	</div>
        </div>
      </div>

      <div class="slider-item js-fullheight">
      	<div class="overlay"></div>
        <div class="container-fluid p-0">
          <div class="row d-flex no-gutters slider-text js-fullheight align-items-center justify-content-end" data-scrollax-parent="true">
          	<div class="one-third order-md-last img js-fullheight" style="background-image:url(images/Uzbekistan_2.jpg);">
          		<div class="overlay"></div>
          	</div>
	          <div class="one-forth d-flex js-fullheight align-items-center ftco-animate" data-scrollax=" properties: { translateY: '70%' }">
	          	<div class="text mt-md-5">
		            <h1 class="mb-4">{{{page.hero2.header}}}</h1>
		            <p>{{page.hero2.subtext}}</p>
	            </div>
	          </div>
        	</div>
        </div>
      </div>
    </section>
	

		<section class="ftco-section ftco-wrap-about ftco-no-pb ftco-no-pt">
			<div class="container">
				<div class="row no-gutters">
					<div class="col-sm-5 img img-2 d-flex align-items-center justify-content-center justify-content-md-end" style="background-image: url({{page.about.bg_image}}); position: relative"></div>
					<div class="col-sm-7 wrap-about py-5 ftco-animate">
	          <div class="heading-section mt-5 mb-4">
	          	<div class="pl-lg-5 ml-md-5">
		          	<span class="subheading">About</span>
		            <h2 class="mb-4">{{page.about.header}}</h2>
	            </div>
	          </div>
	          <div class="pl-lg-5 ml-md-5">
							<p>{{page.about.subtext}}</p>
							<h3 class="mt-5">Destinations</h3>
							<div class="thumb my-4 d-flex">

					{{#page.about.images}}
	            	<a href="/blog" class="thumb-menu pr-md-4 text-center">
	            		<div class="img" style="background-image: url({{image}});"></div>
	            		<h4>{{caption}}</h4>
	            	</a>
					{{/page.about.images}}


	            </div>
						</div>
					</div>
				</div>
			</div>
		</section>

		


    <section class="ftco-section">
    	<div class="container">
    		<div class="row justify-content-center mb-5 pb-2">
          	<div class="col-md-7 text-center heading-section ftco-animate">
          	<span class="subheading">Activities</span>
            <h2 class="mb-4">Our Guided Tours</h2>
       	   </div>
        </div>
        <div class="row">
        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Bukhara</h3>
        			</div>


					{{#bukhara}}
					<div class="menus d-flex ftco-animate">
						<div class="menu-img img" style="background-image: url({{image}});"></div>
							<div class="text">
							<div class="d-flex">
							<div class="one-half">
								<h3>{{name}}</h3>
								</div>
								<div class="one-forth">
								<span class="price">${{price}}</span>
								</div>
							</div>
							<p><span>{{description}}</span></p>
						</div>	
					</div>
					{{/bukhara}}


        	</div>

        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Samarkand</h3>
        		</div>


					{{#samarkand}}
					<div class="menus d-flex ftco-animate">
						<div class="menu-img img" style="background-image: url({{image}});"></div>
							<div class="text">
							<div class="d-flex">
							<div class="one-half">
								<h3>{{name}}</h3>
								</div>
								<div class="one-forth">
								<span class="price">${{price}}</span>
								</div>
							</div>
							<p><span>{{description}}</span></p>
						</div>	
					</div>
					{{/samarkand}}
        	</div>

        	<div class="col-md-6 col-lg-4 menu-wrap">
        		<div class="heading-menu text-center ftco-animate">
        			<h3>Khiva</h3>
        		</div>
						{{#khiva}}
						<div class="menus d-flex ftco-animate">
							<div class="menu-img img" style="background-image: url({{image}});"></div>
								<div class="text">
									<div class="d-flex">
										<div class="one-half">
									<h3>{{name}}</h3>
									</div>
								<div class="one-forth">
									<span class="price">${{price}}</span>
									</div>
								</div>
								<p><span>{{description}}</span></p>
							</div>	
						</div>
						{{/khiva}}
				</div>
              </div>
            
        	</div>
		</div>
     
        	

    </section>


			

		<section class="ftco-section ftco-no-pt ftco-no-pb">
			<div class="container">
				<div class="row d-flex">
          <div class="col-md-5 ftco-animate img img-2" style="background-image: url(images/uzbek_hospitality.jpg);"></div>
          <div class="col-md-7 ftco-animate makereservation p-4 p-md-5">
          	<div class="heading-section ftco-animate mb-5">
	          	<span class="subheading">Book a Tour</span>
	            <h2 class="mb-4">Make Reservation</h2>
	          </div>
            <form action="/order" method="post">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">Name</label>
                    <input id="confirmation-name" name="name" type="text" class="form-control" placeholder="Your Name">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">Email</label>
                    <input id="confirmation-email" name="email" type="text" class="form-control" placeholder="Your Email">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">Phone</label>
                    <input id="confirmation-phone" name="phone" type="text" class="form-control" placeholder="Leave your phone number">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">Date</label>
                    <input id="tour-date" name="date" type="text" class="form-control" id="book_date" placeholder="Choose the date">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label for="">Tour name</label>
                    <input id="tour-name-description" name="tour_name" type="text" class="form-control" placeholder="Chosen tour">
                  </div>
                </div>
                <div class="col-md-12 mt-3">
                  <div id="btn-order-containter" class="form-group">
                    <input id="btn-order" type="submit" value="Book Now" class="btn btn-primary py-3 px-5">
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
			</div>
		</section>

    {{>footer}}
    {{>scripts}}

	<script>
	(function(){
		console.log('HELLO!')
		$('#btn-order').click(function(event){
			if (event)
				event.preventDefault()

			var order = {
				name: $('#confirmation-name').val(),
				email: $('#confirmation-email').val(),
				phone: $('#confirmation-phone').val(),
				date: $('#tour-date').val(),
				tour_name: $('tour-name-description').val()

			}


			console.log('Place Order: ' + JSON.stringify(order))
			$.ajax({
				url: '/order',
				method: 'post',
				data: order,
				success: function(resp){
					console.log('BOOKING RECEIVED: ' + JSON.stringify(resp))
					$('#btn-order-containter').html('<h3>Your tour is booked!</h3>')

				},
				error: function(){

				}
			})

		})


	}) ()
	</script>
  </body>
</html>